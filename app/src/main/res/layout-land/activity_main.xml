<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appTable"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    android:background="#383B3D"
    android:backgroundTint="#383B3D"
    android:gravity="center"
    tools:context=".MainActivity">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtRes"
            android:layout_width="565dp"
            android:layout_height="wrap_content"

            android:elegantTextHeight="false"
            android:foregroundTint="#FFFFFF"
            android:gravity="center|right"

            android:hint="0"
            android:inputType="numberSigned"
            android:lines="1"
            android:longClickable="false"
            android:maxLength="12"
            android:paddingRight="150dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/secondary_text_dark"
            android:textColorHint="@android:color/secondary_text_dark"
            android:textSize="30sp"
            android:textStyle="bold"
            app:autoSizeTextType="uniform" />

    </TableRow>

    <TableRow
        android:id="@+id/tbRow1"
        android:layout_width="427dp"
        android:layout_height="61dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="601dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAC"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@color/colorPrimary"
                android:backgroundTint="#09D8BC"
                android:text="AC"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnDiv"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@color/colorPrimary"
                android:backgroundTint="#AEEA00"
                android:text="รท"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnMulti"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@color/colorPrimary"
                android:backgroundTint="#AEEA00"
                android:text="x"
                android:textSize="24sp" />
        </LinearLayout>

    </TableRow>

    <TableRow
        android:id="@+id/tbRow2"
        android:layout_width="532dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSeven"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@color/colorPrimary"
                android:backgroundTint="#304FFE"
                android:text="7"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnEight"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@color/colorPrimary"
                android:backgroundTint="#304FFE"
                android:text="8"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnNine"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@color/colorPrimary"
                android:backgroundTint="#304FFE"
                android:text="9"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnSub"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@color/colorPrimary"
                android:backgroundTint="#AEEA00"
                android:text="-"
                android:textSize="24sp" />
        </LinearLayout>

    </TableRow>

    <TableRow
        android:id="@+id/tbRow3"
        android:layout_width="382dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="593dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnFour"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@color/colorPrimary"
                android:backgroundTint="#304FFE"
                android:text="4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnFive"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@color/colorPrimary"
                android:backgroundTint="#304FFE"
                android:text="5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnSix"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@color/colorPrimary"
                android:backgroundTint="#304FFE"
                android:text="6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnAdd"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@color/colorPrimary"
                android:backgroundTint="#AEEA00"
                android:text="+"
                android:textSize="24sp" />
        </LinearLayout>

    </TableRow>

    <TableRow
        android:id="@+id/tbRow4"
        android:layout_width="527dp"
        android:layout_height="172dp">

        <LinearLayout
            android:layout_width="574dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnOne"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:background="@color/colorPrimary"
                        android:backgroundTint="#304FFE"
                        android:text="1"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/btnTwo"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:background="@color/colorPrimary"
                        android:backgroundTint="#304FFE"
                        android:text="2"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/btnThree"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:background="@color/colorPrimary"
                        android:backgroundTint="#304FFE"
                        android:text="3"
                        android:textSize="24sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnZero"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="180dp"
                        android:layout_height="49dp"
                        android:layout_margin="2dp"
                        android:background="@color/colorPrimary"
                        android:backgroundTint="#304FFE"
                        android:text="0"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/btnDot"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:background="@color/colorPrimary"
                        android:backgroundTint="#A0CDF4"
                        android:text="."
                        android:textSize="24sp" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btnEquals"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@color/colorPrimary"
                android:backgroundTint="#00C853"
                android:text="="
                android:textSize="24sp" />

        </LinearLayout>

    </TableRow>

</TableLayout>


